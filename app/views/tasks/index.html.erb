<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6" id="Tasklist">
      <h1>My tasks:</h1>
      <ul>
        <% @tasks.each do |task| %>
        <li> <%= task.completed ? "Done" : "Unfinished" %> -
          <%= link_to task.title, task_path(task)%>
          <%=link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure you want to delete?" } %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
